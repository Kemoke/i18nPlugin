<idea-plugin>
    <id>com.eny.i18n</id>
    <name>i18n support</name>
    <vendor email="e.nyavro@gmail.com" url="https://github.com/nyavro/i18nPlugin">i18nPlugin</vendor>
    <depends>com.intellij.modules.platform</depends>
    <description><![CDATA[
    <h4>i18next TypeScript/JavaScript plugin</h4>
    i18n plugin provides:
    <ul>
        <li>annotation of invalid i18n keys</li>
        <li>navigation to i18n property value definition</li>
    </ul>
    ]]></description>

    <change-notes><![CDATA[
        <div>
            <h3>1.4.2</h3>
            <ul>
                <li>Fixed vue-i18n multi reference navigation</li>
                <li>Fixed unresolved default namespace key annotation.</li>
            </ul>
        </div>
        <div>
            <h3>1.4.1</h3>
            <ul>
                <li>Support for default namespaces.</li>
                <li>Basic support for vue-i18n: navigation and annotations.</li>
            </ul>
        </div>
        <div>
            <h3>1.3.1</h3>
            <ul>
                <li>Added navigation from JSON node containing translation to key in code.</li>
                <li>Added basic customization panel.</li>
            </ul>
        </div>
    ]]>
    </change-notes>

    <depends>JavaScript</depends>
    <extensions defaultExtensionNs="com.intellij">
        <annotator language="TypeScript" implementationClass="com.eny.i18n.plugin.ide.CompositeKeyAnnotator"/>
        <annotator language="VueJS" implementationClass="com.eny.i18n.plugin.ide.CompositeKeyAnnotator"/>
        <psi.referenceContributor language="TypeScript" implementation="com.eny.i18n.plugin.ide.ReferenceContributor"/>
        <psi.referenceContributor language="VueJS" implementation="com.eny.i18n.plugin.ide.ReferenceContributor"/>
        <psi.referenceContributor language="JSON" implementation="com.eny.i18n.plugin.ide.JsonReferenceContributor"/>
        <completion.contributor language="TypeScript" implementationClass="com.eny.i18n.plugin.ide.CompositeKeyCompletionContributor"/>
        <projectService serviceInterface="com.eny.i18n.plugin.ide.settings.Settings" serviceImplementation="com.eny.i18n.plugin.ide.settings.Settings"/>
        <projectConfigurable groupId="tools" displayName="i18n Plugin" instance="com.eny.i18n.plugin.ide.settings.Configurable"/>
        <lang.parserDefinition language="I18n" implementationClass="com.eny.i18n.plugin.parser.KeyParserDefinition"/>
        <languageInjector implementation="com.eny.i18n.plugin.parser.I18nLanguageInjector"/>
    </extensions>
</idea-plugin>